<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="3dp"
    android:clickable="true"
    android:focusable="true">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        android:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/airlineLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:layout_margin="6dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="6dp">

                <TextView
                    android:id="@+id/nameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thai Airways"
                    android:layout_marginVertical="3dp"
                    android:layout_gravity="start"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/sloganTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Smooth as Silk / I Fly THAI"
                    android:layout_marginVertical="3dp"
                    android:layout_gravity="start"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/headQuartersTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jom Phol Subdistrict, Chatuchak, Bangkok, Thailand"
                    android:layout_marginVertical="3dp"
                    android:layout_gravity="start"
                    android:textStyle="italic"
                    android:lines="2"
                    android:ellipsize="end"/>


                <TextView
                    android:id="@+id/webTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="www.thaiairways.com"
                    android:layout_marginVertical="3dp"
                    android:layout_gravity="start"
                    android:autoLink="web"
                    android:ellipsize="end"/>


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:visibility="gone"/>
</LinearLayout>